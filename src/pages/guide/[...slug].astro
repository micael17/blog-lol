---
import { getCollection, render } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';

export async function getStaticPaths() {
	const guides = await getCollection('guide');
	return guides.map((guide) => ({
		params: { slug: guide.id },
		props: guide,
	}));
}

const guide = Astro.props;
const { Content } = await render(guide);
---

<!doctype html>
<html lang="ko">
	<head>
		<BaseHead title={`${guide.data.title} | ${SITE_TITLE}`} description={guide.data.description} />
	</head>
	<body>
		<Header />
		<main>
			<article>
				<header class="guide-header">
					<div class="meta">
						<span class="champion">{guide.data.champion}</span>
						<span class="role">{guide.data.role}</span>
						<span class="difficulty">{guide.data.difficulty}</span>
					</div>
					<h1>{guide.data.title}</h1>
					<div class="date-info">
						<time datetime={guide.data.pubDate.toISOString()}>
							{guide.data.pubDate.toLocaleDateString('ko-KR')}
						</time>
						{guide.data.updatedDate && (
							<span class="updated">
								(수정: {guide.data.updatedDate.toLocaleDateString('ko-KR')})
							</span>
						)}
					</div>
				</header>
				<div class="content">
					<Content />
				</div>
			</article>
			<nav class="back-nav">
				<a href="/guide">← 목록으로</a>
			</nav>
		</main>
		<Footer />
	</body>
</html>

<style>
	.guide-header {
		margin-bottom: 2rem;
		padding-bottom: 1.5rem;
		border-bottom: 1px solid rgb(var(--gray-200));
	}

	.meta {
		display: flex;
		gap: 0.5rem;
		margin-bottom: 1rem;
	}

	.meta span {
		font-size: 0.75rem;
		padding: 0.25rem 0.5rem;
		background: rgb(var(--gray-100));
		border-radius: 4px;
	}

	.champion {
		font-weight: 600;
	}

	h1 {
		font-size: 2rem;
		margin: 0 0 0.75rem 0;
	}

	.date-info {
		font-size: 0.875rem;
		color: rgb(var(--gray-500));
	}

	.updated {
		margin-left: 0.5rem;
	}

	.content {
		line-height: 1.8;
	}

	.back-nav {
		margin-top: 3rem;
		padding-top: 1.5rem;
		border-top: 1px solid rgb(var(--gray-200));
	}

	.back-nav a {
		font-size: 0.9375rem;
		color: rgb(var(--gray-600));
	}

	.back-nav a:hover {
		color: rgb(var(--black));
	}

	@media (max-width: 640px) {
		h1 {
			font-size: 1.5rem;
		}
	}
</style>
