---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection } from 'astro:content';

const news = (await getCollection('news')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const pageTitle = '뉴스';
---

<!doctype html>
<html lang="ko">
	<head>
		<BaseHead title={`${pageTitle} | ${SITE_TITLE}`} description="리그 오브 레전드 최신 뉴스" />
	</head>
	<body>
		<Header />
		<main>
			<h1>{pageTitle}</h1>

			{news.length > 0 ? (
				<ul class="news-list">
					{news.map((item) => (
						<li>
							<a href={`/news/${item.id}/`}>
								<span class="category">{item.data.category}</span>
								<h2>{item.data.title}</h2>
								<p class="description">{item.data.description}</p>
								<time datetime={item.data.pubDate.toISOString()}>
									{item.data.pubDate.toLocaleDateString('ko-KR')}
								</time>
							</a>
						</li>
					))}
				</ul>
			) : (
				<p class="empty-message">뉴스를 준비 중입니다...</p>
			)}
		</main>
		<Footer />
	</body>
</html>

<style>
	h1 {
		margin-bottom: 2rem;
		padding-bottom: 1rem;
		border-bottom: 2px solid rgb(var(--black));
	}

	.news-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.news-list li {
		border-bottom: 1px solid rgb(var(--gray-200));
	}

	.news-list li:last-child {
		border-bottom: none;
	}

	.news-list a {
		display: block;
		padding: 1.5rem 0;
		text-decoration: none;
		transition: background 0.2s;
	}

	.news-list a:hover {
		opacity: 1;
		background: rgb(var(--gray-50));
		margin: 0 -1rem;
		padding: 1.5rem 1rem;
	}

	.category {
		display: inline-block;
		font-size: 0.75rem;
		padding: 0.25rem 0.5rem;
		background: rgb(var(--black));
		color: rgb(var(--white));
		border-radius: 4px;
		margin-bottom: 0.5rem;
	}

	.news-list h2 {
		font-size: 1.25rem;
		margin: 0 0 0.5rem 0;
	}

	.description {
		color: rgb(var(--gray-600));
		margin: 0 0 0.5rem 0;
		font-size: 0.9375rem;
	}

	time {
		font-size: 0.875rem;
		color: rgb(var(--gray-500));
	}

	.empty-message {
		color: rgb(var(--gray-500));
		text-align: center;
		padding: 3rem 0;
	}
</style>
