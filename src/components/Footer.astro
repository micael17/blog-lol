---
import { SITE_TITLE } from '../consts';
const year = new Date().getFullYear();
---

<footer>
	<p>&copy; {year} {SITE_TITLE}</p>
</footer>

<style>
	footer {
		max-width: 768px;
		margin: 0 auto;
		padding: 2rem 1.5rem;
		border-top: 1px solid rgb(var(--gray-200));
		text-align: center;
	}

	footer p {
		margin: 0;
		font-size: 0.875rem;
		color: rgb(var(--gray-500));
	}

	@media (max-width: 640px) {
		footer {
			padding: 1.5rem 1rem;
		}
	}
</style>
